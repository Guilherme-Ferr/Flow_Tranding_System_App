<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Login -->
    <style name="hintInputAppearence" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="theme">@style/Theme.AppCompat.Light</item>
    </style>
    <style name="buttonTextAppearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <style name="footerAppearence" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="theme">@style/Theme.MaterialComponents.Light</item>
    </style>

    <!--splash -->
    <style name="splash_startupName_appearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>


    <style name="splash_startupKind_appearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!-- Employee Register -->
    <style name="register_title_appearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- HEAD -->
    <style name="initialMenu_appearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>
    <style name="holder_menu_title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/primaryDark</item>
    </style>
    <!--Datasheet Activity-->
    <style name="title_product_name" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="product_infotmation_titles" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/secondary</item>
    </style>
    <style name="titles_pdv" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
        <item name="color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="pdv_prices" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="color">@android:color/black</item>
    </style>
    <style name="pdv_white_titles" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="buy_description" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="white_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="exampleToast">
        <item name="android:colorBackground">#94ffab</item>
        <item name="android:textColor">#000</item>
<!--        <item name="icon">@drawable/ic_key_24</item>-->
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">3dp</item>
    </style>

</resources>